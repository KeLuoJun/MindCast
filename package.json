{
    "name": "mindcast",
    "version": "0.1.0",
    "description": "MindCast — 多智能体 AI 播客系统",
    "scripts": {
        "setup": "npm install && cd frontend && npm install",
        "setup:backend": "uv sync",
        "setup:all": "npm run setup && npm run setup:backend",
        "dev": "concurrently -n \"backend,frontend\" -c \"yellow,cyan\" \"npm run backend\" \"npm run frontend\"",
        "backend": "uv run python main.py",
        "frontend": "cd frontend && npm run dev",
        "build": "cd frontend && npm run build"
    },
    "devDependencies": {
        "concurrently": "^9.1.2"
    },
    "engines": {
        "node": ">=18.0.0"
    },
    "license": "AGPL-3.0"
}